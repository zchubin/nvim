{
    "suggest.autoTrigger"                       : "none",
    "suggest.triggerAfterInsertEnter"           : false,
    "suggest.timeout"                           : 500,
    "suggest.noselect"                          : true,
    "suggest.keepCompleteopt"                   : true,
    "suggest.enablePreview"                     : true,
    "suggest.minTriggerInputLength"             : 2,
    "suggest.snippetIndicator"                  : "▶",
    "suggest.detailMaxLength"                   : 50,
    "suggest.enablePreselect"                   : false,
    "suggest.floatEnable"                       : true,
    "suggest.detailField"                       : "preview",
    "suggest.triggerCompletionWait"             : 100,
    "suggest.echodocSupport"                    : true,
    "suggest.completionItemKindLabels" : {
            "class"         : "\uf0e8",
            "color"         : "\ue22b",
            "constant"      : "\uf8fe",
            "default"       : "\uf29c",
            "enum"          : "\uf435",
            "enumMember"    : "\uf02b",
            "event"         : "\ufacd",
            "field"         : "\uf93d",
            "file"          : "\uf723",
            "folder"        : "\uf115",
            "function"      : "\u0192",
            "interface"     : "\uf417",
            "keyword"       : "\uf1de",
            "method"        : "\uf6a6",
            "module"        : "\uf40d",
            "operator"      : "\uf915",
            "property"      : "\ue624",
            "reference"     : "\ufa46",
            "snippet"       : "\ue60b",
            "struct"        : "\ufb44",
            "text"          : "\ue612",
            "typeParameter" : "\uf728",
            "unit"          : "\uf475",
            "value"         : "\uf89f",
            "variable"      : "\ue71b"
    },

    "diagnostic.signOffset"          : 1,
    "diagnostic.refreshOnInsertMode" : false,
    "diagnostic.refreshAfterSave"    : true,
    "diagnostic.checkCurrentLine"    : true,
    "diagnostic.errorSign"           : "",//"×",
    "diagnostic.warningSign"         : "",//"»",
    "diagnostic.hintSign"            : "",//"ღ",
    "diagnostic.infoSign"            : "",//"ஐ",
    "diagnostic.displayByAle"        : false,
    "diagnostic.virtualTextPrefix"   : "❯❯ ",
    "diagnostic.virtualText"         : true,

    "list.source.grep.defaultArgs"       : ["-regex"],
    "list.source.symbols.defaultOptions" : ["--interactive", "--number-select"],
    "list.previewHighlightGroup"         : "Statement",
    "list.nextKeymap"                    : "<C-n>",
    "list.previousKeymap"                : "<C-p>",

    "coc.preferences.hoverTarget"           : "preview",
    "coc.preferences.enableFloatHighlight"  : true,
    "coc.preferences.highlightTimeout"      : 5000,
    "coc.preferences.snippetStatusText"     : "",//"Ⓢ "
    "coc.preferences.extensionUpdateCheck"  : "weekly",
    "coc.preferences.formatOnType"          : true,
    "coc.preferences.formatOnSaveFiletypes" : [
            "python",
            "html",
            "css",
            "markdown",
            "Markdown",
            "javascript",
            "javascriptreact",
            "typescript",
            "typescriptreact"
    ],

    "git.enableGutters"             : true,
    "git.branchCharacter"           : "\uf408",
    "git.addGBlameToBufferVar"      : false,
    "git.addGBlameToVirtualText"    : false,
    "git.addedSign.hlGroup"         : "GitGutterAdd",
    "git.changedSign.hlGroup"       : "GitGutterChange",
    "git.removedSign.hlGroup"       : "GitGutterDelete",
    "git.topRemovedSign.hlGroup"    : "GitGutterDelete",
    "git.changeRemovedSign.hlGroup" : "GitGutterChangeDelete",
    "git.addedSign.text"            : "螺",// "▎",
    "git.changedSign.text"          : "蘿",// "░",
    "git.removedSign.text"          : "羅",// "▏",
    "git.topRemovedSign.text"       : "ﬂ ",// "▔",
    "git.changeRemovedSign.text"    : "ﬃ ",// "▒",
    "git.signOffset"                : 2,
    "git.enableGlobalStatus"        : false,
    "git.virtualTextPrefix"         : "❯❯ ",

    // "python.autoComplete.addBrackets" : true,
    // "python.jediEnabled"              : false,
    // "python.formatting.provider"      : "yapf",
    // "python.formatting.yapfArgs"      : [
    //     "--style",
    //     "{SPACES_AROUND_POWER_OPERATOR: True, SPACES_BEFORE_COMMENT: 1}"
    // ],

    "signature.target": "echo",
    "signature.enable": true,

    "codeLens.enable": true,

    "tslint.autoFixOnSave" : true,

    "html.format.enable" : true,

    "json.format.enable" : true,

    "yank.enableCompletion" : false,

    "languageserver": {
            "lua": {
                    "command"   : "lua-lsp",
                    "filetypes" : ["lua"]
            },

            "golang": {
                    "command"      : "gopls",
                    "rootPatterns" : ["go.mod"],
                    "filetypes"    : ["go"],
                    "initializationOptions": {
                            "gocodeCompletionEnabled" : true,
                            "diagnosticsEnabled"      : true,
                            "lintTool"                : "golint"
                    }
            },

            "bash": {
                    "command"          : "bash-language-server",
                    "args"             : ["start"],
                    "filetypes"        : ["sh"],
                    "ignoredRootPaths" : []
            },
            "groovy": {
                    "command": "java",
                    // "args": ["-jar", "/usr/local/bin/groovy-language-server-all.jar"],
                    "filetypes": ["groovy"]
            },

            "ccls": {
                    "command"      : "ccls",
                    "filetypes"    : ["c", "cpp", "cuda", "objc", "objcpp"],
                    "rootPatterns" : [".ccls-root", "compile_commands.json"],
                    "initializationOptions": {
                             "cache": {
                                     "directory": ".ccls-cache"
                             }
                     }
            }

    }
}
